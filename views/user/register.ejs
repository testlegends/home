<%- Html.tag('h2', 'Sign Up', { id: 'title' }) %>

<%- Form.create('User', { method: 'post', class: 'form-horizontal', action: '/user/add' }) %>
<%- Form.input('name', { placeholder: 'Enter your Name' }) %>
<%- Form.input('email', { placeholder: 'Enter your E-mail' }) %>
<%- Form.input('password', { placeholder: 'Enter Password' }) %>
<%  // Form.input('role', { in: { student: 'Student', teacher: 'Teacher' } }) %>
<%- Form.end('Sign Up') %>

<%- Html.link('Login', { controller: 'user', action: 'login' }) %>

<br /><br />

<iframe width="560" height="315" src="https://www.youtube.com/embed/w78roeviEZM" frameborder="0" allowfullscreen></iframe>

<script src="/js/trackr.js"></script>
<script>
$(document).ready(function(){
    $.trackr({
        name: 'TestLegends Sign Up Page',
        dbUrl: '/trackr',
        // pageWaitTime: 6000,
        trackers: [
            { element: 'button.btn', name: 'Sign Up', event: 'click', condition: { notEmpty: '#bottom input[type=email]' } }
        ]
    });
});
</script>
