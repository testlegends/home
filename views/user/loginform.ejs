<%- Html.tag('h2', 'Login', { id: 'title' }) %>

<%- Form.create('User', { method: 'POST' }) %>
<%- Form.input('email', { placeholder: 'E-mail' }) %>
<%- Form.input('password', { placeholder: 'Password' }) %>
<%- Form.end('Login') %>

<%- Html.link('Sign Up', { controller: 'user', action: 'register' }) %> /
<%- Html.link('Forgot Password', { controller: 'user', action: 'reset_password' }) %>

<script type="text/javascript">
	$(document).ready(function(){
		$('input[name=email]').focus();
	});
</script>
