<%- Html.docType() %>
<html>
	<head>
		<title><%- title %></title>

		<!-- Viewport mobile tag for sensible mobile support -->
		<%- Html.meta({ name: 'viewport', content: 'width=device-width, initial-scale=1, maximum-scale=1' }) %>

		<%- Html.meta('icon') %>

		<%- Html.css([
				'//netdna.bootstrapcdn.com/bootswatch/3.1.1/flatly/bootstrap.min.css',
				'//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css',
				'style.css'
		]) %>

		<%- Html.script([
				'//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js',
				'//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js',
				'bootstrap.js'
		]) %>
	</head>

	<body>
		<div id="wrap">
			<div class="navbar navbar-default navbar-fixed-top">
				<div class="container">
					<div class="navbar-header">
						<a data-target=".navbar-collapse" data-toggle="collapse" class="navbar-toggle">
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
							<span class="icon-bar"></span>
						</a>

						<a href="/" class="navbar-brand"><%- title %></a>
					</div>

					<div class="collapse navbar-collapse navbar-right">
						<ul class="nav navbar-nav">
							<% if (!req.isAuthenticated()) { %>
								<li><a href="/user/register"><i class="fa fa-sign-in"></i> Sign Up</a></li>
								<li><a href="/user/login"><i class="fa fa-sign-in"></i> Log In</a></li>
							<% } else { %>
								<li><a href="/user/profile"><i class="fa fa-user"></i> My Account</a></li>
								<li><a href="/user/logout"><i class="fa fa-sign-out"></i> Log Out</a></li>
							<% } %>
						</ul>
					</div>
				</div>
			</div>

			<div class="container">
				<header></header>

				<div id="content">
					<%- partial('../partials/flash') %>
					<%- body %>
				</div>

				<div id="push"></div>
			</div>
		</div>

		<footer>
			<div class="container">
				<p class="muted credit">&copy; 2013 <a href="http://jefflee.net/" target="_blank">Jeff Lee</a></p>
			</div>
		</footer>
	</body>
</html>
