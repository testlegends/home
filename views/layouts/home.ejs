    <script>
    global_width = 2272;
    global_height = 1280;

    // createjs, show dom before it is animated
    show_dom = function (id_name) {
        $('#'+id_name).show();
    }

    $(window).on("resize", function(){
        var ratio = 640/1136;
        var update_w = window.innerWidth * 0.8;
        $('#canvas_container').css('width', update_w);
        $('#canvas_container').css('height', update_w*ratio);
        style_width = update_w;
        style_height = update_w*ratio;
        // preload();
    });
    </script>

